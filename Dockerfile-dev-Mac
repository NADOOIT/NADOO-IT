# Use Python Alpine image (much smaller)
FROM python:3.9-alpine

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    IMAGEIO_FFMPEG_EXE=/usr/bin/ffmpeg

# Set work directory
WORKDIR /app

# Install git and build dependencies
RUN apk add --no-cache git make gcc g++ musl-dev \
    freetype-dev jpeg-dev zlib-dev \
    linux-headers libffi-dev curl \
    ffmpeg

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY . /app/

# Set work directory to where manage.py is located
WORKDIR /app/app

# Create directories for static and media files
RUN mkdir -p /vol/web/static && \
    mkdir -p /vol/web/media && \
    chmod -R 755 /vol/web

# Fix line endings and make entrypoint script executable
RUN sed -i 's/\r$//' /app/app/entrypoint.sh && \
    chmod +x /app/app/entrypoint.sh

# Expose port 8000
EXPOSE 8000

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/ || exit 1

# Set the default command
ENTRYPOINT ["/app/app/entrypoint.sh"]