{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "nadooitmanagmentsystem:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"args": [
					"runserver_plus",
					"0.0.0.0:8000",
					"--nothreading",
					"--noreload",
					"--cert-file cert.cer",
					"--key-file key.pem"
				],
				"file": "manage.py"
			}
		},
		{
			"type": "shell",
			"label": "tests: docker (full)",
			"command": "${workspaceFolder}/runTester.ps1",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "tests: docker (quick)",
			"command": "${workspaceFolder}/runTester.ps1 -Quick",
			"problemMatcher": []
		}
	]
}